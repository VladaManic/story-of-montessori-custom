body {
	font-family: 'Montserrat', sans-serif;
}

#story-of-montessory {
	background-color: #ECE5DB;;
	color: #B58C67;
}

.container-custom {
	width: 1100px;
	margin: auto;
}


/* Footer */

#shopify-section-footer, 
.footer {
	background-color: #0E1F2A;
	color: #B58C67;
}

.footer .footer__content-top {
	width: 1040px;
}

.footer .footer__blocks-wrapper {
	display: flex;
}

.footer .footer-block {
	width: 25%;
	height: 180px;
}

.footer .footer-block:nth-of-type(1) {
	border-right: 1px solid #B58C67;
}

.footer .footer-block:nth-of-type(2) {
	width: 50%;
}

.footer .footer-block:nth-of-type(3) {
	border-left: 1px solid #B58C67;
	text-align: right;
}

.footer .footer-block a,
.footer .footer-block h2,
.footer .newsletter-form__message {
	color: #B58C67;
}

.footer .footer-block a:hover {
	color: #deb897;
	text-decoration: none;
}

.footer .newsletter-form__field-wrapper .field__label {
	color: #B58C67;
}

.footer .footer-block a {
	font-family: 'Montserrat', sans-serif;
	font-weight: 500;
	font-size: 14px;
	line-height: 17px;
}

.footer .footer-block:nth-of-type(1) a {
	text-transform: uppercase;
}

.footer .list-unstyled {
	margin-top: 30px;
}

.footer .list-unstyled li {
	margin-bottom: 20px;
	margin-right: 0 !important;
}

.footer .footer-block h2 {
	width: 400px;
	margin: auto;
	margin-top: 20px;
	margin-bottom: 30px;
	font-family: 'Montserrat', sans-serif;
	font-weight: 500;
	font-size: 20px;
	line-height: 28px;
}

.footer input[type=email] {
	background-color: #3b3b3b;
	color: #B58C67;
}

.footer .newsletter-form__field-wrapper .field:after,
.footer .field:hover.field:after, 
.footer .field__input:focus-visible {
	-webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
}

.footer .title-foo {
	position: relative;
	margin-bottom: 15px;
	border-bottom: 1px solid #B58C67;
}

.footer .title-foo-paragr {
	position: absolute;
	top: -35px;
	left: 50%;
	-webkit-transform: translateX(-50%);
	-moz-transform: translateX(-50%);
	transform: translateX(-50%);
	padding-right: 20px;
	padding-left: 20px;
	background-color: #0E1F2A;
	font-family: 'Playfair Display', serif;
	font-size: 20px;
	line-height: 27px;
	font-weight: 500;
	letter-spacing: 4%;
}

.footer .copyright__content a:hover {
	color: #deb897;
	text-decoration: none;
}
